---
import Layout from "../layouts/Layout.astro";
import TableConverter from "../components/TableConverter.jsx";
---

<Layout>
    <main class="min-h-screen flex flex-col items-center py-10">
        <div class="text-center mb-10 space-y-4">
            <h1
                class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500"
            >
                Markdown Table to Text
            </h1>
            <p class="text-gray-400 text-lg">
                Instantly convert Markdown tables into formatted ASCII text.
            </p>
        </div>

        <div class="w-full">
            <TableConverter client:load />
        </div>

        <section class="max-w-4xl mx-auto mt-10 px-6 text-gray-300">
            <h2 class="text-3xl font-bold text-white mb-10 text-center">
                Why use Markdown Table to Text?
            </h2>

            <div class="grid md:grid-cols-3 gap-8 text-center">
                <div
                    class="p-6 bg-gray-800/50 rounded-xl border border-gray-700"
                >
                    <h3 class="text-xl font-semibold text-purple-400 mb-3">
                        Instant Conversion
                    </h3>
                    <p class="text-sm leading-relaxed">
                        Paste your Markdown table and get perfectly aligned
                        ASCII text instantly. No manual spacing required.
                    </p>
                </div>

                <div
                    class="p-6 bg-gray-800/50 rounded-xl border border-gray-700"
                >
                    <h3 class="text-xl font-semibold text-blue-400 mb-3">
                        Perfect Alignment
                    </h3>
                    <p class="text-sm leading-relaxed">
                        Smart algorithms handle variable column widths and
                        content types to ensure zero misalignment.
                    </p>
                </div>

                <div
                    class="p-6 bg-gray-800/50 rounded-xl border border-gray-700"
                >
                    <h3 class="text-xl font-semibold text-pink-400 mb-3">
                        Developer Friendly
                    </h3>
                    <p class="text-sm leading-relaxed">
                        Generated text is monospaced and ready for READMEs,
                        source code comments, and documentation.
                    </p>
                </div>
            </div>
        </section>

        <footer class="mt-auto py-10 text-gray-500 text-sm">
            Built with Astro & React
        </footer>
    </main>
</Layout>
