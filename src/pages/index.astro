---
import Layout from '../layouts/Layout.astro';
import TableConverter from '../components/TableConverter.jsx';
---

<Layout>
	<main class="min-h-screen flex flex-col items-center py-10">
        <div class="text-center mb-10 space-y-4">
            <h1 class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500">
                Markdown Table to Text
            </h1>
            <p class="text-gray-400 text-lg">
                Instantly convert Markdown tables into formatted ASCII text.
            </p>
        </div>
        
		<div class="w-full">
            <TableConverter client:load />
        </div>
        
        <footer class="mt-auto py-6 text-gray-500 text-sm">
            Built with Astro & React
        </footer>
	</main>
</Layout>
