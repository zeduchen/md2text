---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found" disableAds={true}>
    <main
        class="min-h-screen flex flex-col items-center justify-center p-6 text-center"
    >
        <h1
            class="text-9xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500 mb-4"
        >
            404
        </h1>
        <h2 class="text-3xl font-bold text-white mb-6">Page Not Found</h2>
        <p class="text-gray-400 text-lg max-w-md mb-10">
            The page you're looking for doesn't exist or has been moved.
        </p>

        <a
            href="/"
            class="px-8 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-lg font-semibold transition-colors shadow-lg shadow-blue-500/20"
        >
            Go Home
        </a>
    </main>
</Layout>
