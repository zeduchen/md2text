---
interface Props {
	title: string;
	description?: string;
	disableAds?: boolean;
}

const {
	title,
	description = "Convert Markdown tables to ASCII text instantly. Free tool to format tables for READMEs and docs. Copy ready-to-use text tables with perfect alignment.",
	disableAds = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="google-adsense-account" content="ca-pub-7644074829926237" />
		<title>{title}</title>

		<!-- Robots -->
		<meta name="robots" content="index, follow" />

		<!-- Google tag (gtag.js) -->
		<script
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-NP1DXJ0S80"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-NP1DXJ0S80");
		</script>

		<!-- Google AdSense -->
		{
			!disableAds && (
				<script
					async
					src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7644074829926237"
					crossorigin="anonymous"
				/>
			)
		}

		<!-- SEO -->
		<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
		<meta
			name="keywords"
			content="markdown to text, table converter, ascii table, markdown tools, developer tools"
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/favicon.svg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/favicon.svg" />

		<!-- Structured Data -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "WebApplication",
				name: "Markdown Table to Text Converter - Instant ASCII Formatter",
				url: Astro.site,
				description:
					"Convert Markdown tables to ASCII text instantly. Free tool to format tables for READMEs and docs. Copy ready-to-use text tables with perfect alignment.",
				applicationCategory: "DeveloperApplication",
				operatingSystem: "Any",
			})}
		/>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-gray-900 text-white min-h-screen font-sans">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}
	html {
		font-family: "Inter", system-ui, sans-serif;
	}
	code,
	pre,
	textarea {
		font-family:
			ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
			"Courier New", monospace; /* Robust stack for Mac/CJK */
	}
</style>
